<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".RequestDetailActivity">

    <ImageView
        android:id="@+id/request_Cover"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/naruto"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/request_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sword Art Online"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/request_TAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Author"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/request_TSynopsis"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/request_Requester"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requester"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/request_Receiver"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiver"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/requestButton"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCEPT REQUEST"
        />

</LinearLayout>